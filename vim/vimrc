call pathogen#runtime_append_all_bundles()
call pathogen#helptags()

set nocompatible

syntax enable
filetype on
filetype indent on
filetype plugin on

set background=dark
colorscheme solarized

set backupdir=~/vimtmp,.
set directory=~/vimtmp,.

" Tabs
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab

" Always display the status line
set laststatus=2

" Leader character
let mapleader = ","

" Numbers
set number
set numberwidth=5

" Columns and wrapping
set cc=80
set nowrap

" Turn off bell
set vb t_vb=

" Insert New Line
map <S-Enter> O<ESC>
map <Enter> o<ESC>

" Keep visual selection after indenting
noremap < <gv
noremap > >gv

" Search
set hlsearch
set incsearch
nnoremap <leader><space> :noh<cr>

" Scrolling
set scrolloff=4
