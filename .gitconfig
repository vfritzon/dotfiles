# Heavily inspired by https://github.com/garybernhardt/dotfiles/blob/07bbd349eb0480dc07a6514efde30b8223d18b1d/.gitconfig

[init]
  defaultBranch = main
[core]
  editor = vim
  pager = diff-so-fancy | less --tabs=4 -RFX
[diff]
[color]
  ui = auto
[color "diff-highlight"]
  oldNormal = red
  oldHighlight = red "#500000"
  newNormal = green
  newHighlight = green "#003000"
[color "diff"]
  meta = 11
  frag = magenta bold
  commit = yellow bold
  old = red
  new = green
  whitespace = "#ffff00" reverse
[alias]
  st = status
  ci = commit --verbose
  co = checkout
  amend = commit --amend
  aa = add --all

    # Fancy logging.
    #   h = head
    #   hp = head with patch
    #   r = recent commits, only current branch
    #   ra = recent commits, all reachable refs
    #   l = all commits, only current branch
    #   la = all commits, all reachable refs
    #   b = all branches
    #   bs = all branches, sorted by last commit date
  head = !git r -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !GIT_NO_PAGER=1 git l -30
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all
  b = "!. ~/.githelpers && pretty_git_branch"
  bs = "!. ~/.githelpers && pretty_git_branch_sorted"
  ski = !git stash --keep-index
  cp = cherry-pick
  pf = push --force-with-lease
[merge]
  tool = vimdiff
[diff-so-fancy]
  stripLeadingSymbols = false
  markEmptyLines = false
